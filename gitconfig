[core]
  editor = /usr/bin/vi
  autocrlf = input
  safecrlf = false
  excludesfile = /Users/rico/.gitignore_global
[push]
  default = tracking
[color]
  ui = true
[alias]
  st = status
  cp = cherry-pick
  co = checkout
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  lp = log -p
  dci = duet-commit
  ada = add -p
	local-branches = !git branch -vv | grep -v origin
[merge]
  conflictstyle = diff3
[rerere]
  enabled = 0
